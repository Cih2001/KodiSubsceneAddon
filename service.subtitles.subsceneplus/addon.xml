<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subtitles.subsceneplus"
       name="Subscene Subtitles"
       version="1.0.50"
       provider-name="Cih2001">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.html5lib"/>
  </requires>
  <extension point="xbmc.subtitle.module"
             library="service.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Subscene.com Subtitles</summary>
    <description lang="en"> A convenient addon to download subtitles from subscene.com. If you find it useful, please consider giving it a star in github. This is being actively maintained. In case of any problem, feel free to open an issue in github.
	</description>
    <platform>all</platform>
    <license>GPL-2.0</license>
    <source>https://github.com/Cih2001/KodiSubsceneAddon</source>
  </extension>
</addon>
